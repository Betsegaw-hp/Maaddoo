<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Mobile Menu Toggle
        const menuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuBackdrop = document.getElementById('menu-backdrop');
        const menuPanel = document.getElementById('menu-panel');
        const menuIcon = document.getElementById('menu-icon');
        const closeIcon = document.getElementById('close-icon');
        const menuLinks = document.querySelectorAll('.mobile-menu-link');
        
        let isMenuOpen = false;
        
        function openMenu() {
            isMenuOpen = true;
            mobileMenu?.classList.remove('pointer-events-none');
            mobileMenu?.classList.add('pointer-events-auto');
            menuBackdrop?.classList.remove('opacity-0');
            menuBackdrop?.classList.add('opacity-100');
            menuPanel?.classList.remove('translate-y-[-20px]', 'opacity-0');
            menuPanel?.classList.add('translate-y-0', 'opacity-100');
            menuIcon?.classList.add('hidden');
            closeIcon?.classList.remove('hidden');
        }
        
        function closeMenu() {
            isMenuOpen = false;
            menuBackdrop?.classList.add('opacity-0');
            menuBackdrop?.classList.remove('opacity-100');
            menuPanel?.classList.add('translate-y-[-20px]', 'opacity-0');
            menuPanel?.classList.remove('translate-y-0', 'opacity-100');
            menuIcon?.classList.remove('hidden');
            closeIcon?.classList.add('hidden');
            setTimeout(() => {
                mobileMenu?.classList.add('pointer-events-none');
                mobileMenu?.classList.remove('pointer-events-auto');
            }, 300);
        }
        
        menuBtn?.addEventListener('click', () => {
            if (isMenuOpen) {
                closeMenu();
            } else {
                openMenu();
            }
        });
        
        menuBackdrop?.addEventListener('click', closeMenu);
        
        menuLinks.forEach(link => {
            link.addEventListener('click', () => {
                closeMenu();
            });
        });
        
        // Mouse Tracker
        const tracker = document.getElementById('mouse-tracker');
        if (tracker) {
            let mouseX = 0, mouseY = 0, trackerX = window.innerWidth/2, trackerY = window.innerHeight/2;

            document.addEventListener('mousemove', (e) => {
                mouseX = e.clientX; mouseY = e.clientY;
                if(tracker.style.opacity === '0' || tracker.style.opacity === '') tracker.style.opacity = '1';
            });

            function animateTracker() {
                trackerX += (mouseX - trackerX) * 0.08;
                trackerY += (mouseY - trackerY) * 0.08;
                if(tracker) {
                    tracker.style.transform = `translate3d(${trackerX - 300}px, ${trackerY - 300}px, 0)`;
                }
                requestAnimationFrame(animateTracker);
            }
            animateTracker();
        }

        // Marquee Logic (Simpler Version for Logos)
        const row1 = document.getElementById('marquee-row-1');
        if(row1) {
            let scroll = 0;
            function animateMarquee() {
                scroll += 0.5;
                if(row1 && scroll >= row1.scrollWidth / 2) scroll = 0;
                if(row1) {
                    row1.style.transform = `translateX(-${scroll}px)`;
                }
                requestAnimationFrame(animateMarquee);
            }
            animateMarquee();
        }
    });
</script>
